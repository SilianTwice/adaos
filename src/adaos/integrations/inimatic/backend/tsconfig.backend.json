{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"types": ["node"],
		"strict": true
	},
	"include": ["./**/*.ts", "./types/**/*.d.ts"]
}
